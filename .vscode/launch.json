        // ----- DEBUG CONFIGURATIONS -----
        {
            "name": "Debug Launch (Windows)",
            "type": "cppdbg", // -> cppvsdbg" 
            "request": "launch",
            "program": "${workspaceFolder}/Debug/Module1/Module1.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "cppvsdbg",
            //"preLaunchTask": "make: Debug Build"
            "preLaunchTask": "CMake Build (Debug)"
        },
        {
            "name": "Debug Launch (Linux)",
